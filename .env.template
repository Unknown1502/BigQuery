# Dynamic Pricing Intelligence - Environment Configuration Template
# Copy this file to .env and fill in your specific values

# =============================================================================
# Google Cloud Platform Configuration
# =============================================================================

# Project and Region
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# Service Account (optional - uses default if not specified)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# =============================================================================
# BigQuery Configuration
# =============================================================================

# Dataset Configuration
BIGQUERY_DATASET=ride_intelligence
BIGQUERY_LOCATION=US

# BigQuery AI Configuration
BIGQUERY_AI_MODEL_REGION=us-central1
BIGQUERY_CONNECTION_ID=your-connection-id

# =============================================================================
# Cloud Storage Configuration
# =============================================================================

# Bucket Names (will be prefixed with project ID)
STREET_IMAGERY_BUCKET=street-imagery
ML_MODELS_BUCKET=ml-models
DATA_PROCESSING_BUCKET=data-processing
BACKUPS_BUCKET=backups
ANALYTICS_BUCKET=analytics

# =============================================================================
# Pub/Sub Configuration
# =============================================================================

# Topic Names
REALTIME_EVENTS_TOPIC=realtime-events
IMAGE_PROCESSING_TOPIC=image-processing
PRICING_UPDATES_TOPIC=pricing-updates
MODEL_TRAINING_TOPIC=model-training

# Subscription Names
REALTIME_EVENTS_SUBSCRIPTION=realtime-events-subscription
IMAGE_PROCESSING_SUBSCRIPTION=image-processing-subscription
PRICING_UPDATES_SUBSCRIPTION=pricing-updates-subscription

# =============================================================================
# Vertex AI Configuration
# =============================================================================

# Model Endpoints
CROWD_DETECTION_ENDPOINT=projects/PROJECT_ID/locations/REGION/endpoints/crowd-detection-endpoint
ACTIVITY_CLASSIFICATION_ENDPOINT=projects/PROJECT_ID/locations/REGION/endpoints/activity-classification-endpoint
DEMAND_FORECASTING_ENDPOINT=projects/PROJECT_ID/locations/REGION/endpoints/demand-forecasting-endpoint
PRICE_OPTIMIZATION_ENDPOINT=projects/PROJECT_ID/locations/REGION/endpoints/price-optimization-endpoint

# Model Configuration
ML_MODEL_STAGING_BUCKET=gs://PROJECT_ID-ml-models
VERTEX_AI_REGION=us-central1

# =============================================================================
# Redis Configuration (for caching)
# =============================================================================

# Redis Connection
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_L1_SIZE=1000
CACHE_L1_TTL=300
CACHE_L2_TTL=3600

# =============================================================================
# API Configuration
# =============================================================================

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# API Security
API_SECRET_KEY=your-super-secret-key-change-this-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_ALGORITHM=HS256

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_BURST=20

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/pricing-intelligence/app.log

# Prometheus Metrics
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# Business Configuration
# =============================================================================

# Pricing Parameters
BASE_PRICE=3.50
MIN_SURGE_MULTIPLIER=0.8
MAX_SURGE_MULTIPLIER=3.0
SURGE_THRESHOLD=1.5

# Model Configuration
DEMAND_FORECAST_HORIZON=24
PRICE_UPDATE_INTERVAL=60
MODEL_RETRAIN_INTERVAL=86400

# A/B Testing
AB_TEST_ENABLED=true
AB_TEST_TRAFFIC_SPLIT=0.1

# =============================================================================
# Development Configuration
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true
TESTING=false

# Development Tools
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# Mock Services (for development)
USE_MOCK_BIGQUERY=false
USE_MOCK_VERTEX_AI=false
USE_MOCK_STORAGE=false
